mixin blockquote(data)
  //- data = { text: string, author: author }
  //- data.author = { img: string, name: string, post: string }
  .blockquote
    .blockquote__text!=data.text
    .blockquote__author
      .blockquote__author-right
        .blockquote__img(style='background-image: url("' + data.author.img + '")')
      .blockquote__author-left
        .blockquote__name!=data.author.name
        .blockquote__post!=data.author.post
