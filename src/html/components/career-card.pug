include ../elements/button

mixin career-card(data)
  //- data = { image: string, name: string, text: string, link: string }
  a.career-card(href=data.link)
    .career-card__image(style='background-image: url("'+data.image+'")')
    .career-card__content
      .career-card__info
        .career-card__title
          p= data.name
        .career-card__text
          p= data.text
      .career-card__button
        +button({ name: 'Подробнее', tag: 'div', style: 'white-grey-bordered' })